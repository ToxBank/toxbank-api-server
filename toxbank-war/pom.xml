<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>toxbank-rest</artifactId>
    <groupId>org.toxbank</groupId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <groupId>org.toxbank</groupId>
  <artifactId>toxbank-war</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>war</packaging>
  <name>TB REST web services demo</name>
  <dependencies>
  	<dependency>
  		<groupId>org.toxbank</groupId>
  		<artifactId>toxbank-protocol</artifactId>
  		<version>${project.version}</version>
  		<type>jar</type>
  		<scope>compile</scope>
  	</dependency>
  	<dependency>
  	 <!-- reuse src/test/java code from moduleA! -->
  		<groupId>org.toxbank</groupId>
  		<artifactId>toxbank-protocol</artifactId>
  		<version>${project.version}</version>
  		<scope>test</scope>
  		<classifier>tests</classifier>
  	</dependency>
  	<dependency>
    	<groupId>org.dbunit</groupId>
    	<artifactId>dbunit</artifactId>
    	<version>2.4.8</version>
    	<scope>test</scope>
    </dependency>
  </dependencies>
    <build>
  <pluginManagement>
  <plugins>
  <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-surefire-plugin</artifactId>
      <configuration>
      <skip>false</skip>
      <disableXmlReport>false</disableXmlReport>
      <argLine>-Xmx1024m</argLine>
     </configuration>
    </plugin>
      <plugin>
  				<groupId>org.codehaus.mojo</groupId>
  				<artifactId>tomcat-maven-plugin</artifactId>
  				<configuration>
					<server>localhost</server>
					<path>/toxbank</path>
					<port>8080</port>
				</configuration>
  	</plugin>
  </plugins>
  </pluginManagement>
    <finalName>toxbank</finalName>
	<resources>
		<resource>
			<directory>src/main/resources</directory>
			<filtering>true</filtering>
		</resource>
	</resources>
	</build>  
  <profiles>
<profile>
   <id>http</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
			<properties>
				<web_xml>src/main/resources/web.xml</web_xml>

				<aa.opensso>src/main/resources/web.xml</aa.opensso>
				<aa.opensso>http://opensso.in-silico.ch/opensso/identity</aa.opensso>
        		<aa.policy>http://opensso.in-silico.ch/Pol/opensso-pol</aa.policy>
			</properties>
   </profile>
   <profile>
            <id>https</id>
 			<activation>
                <activeByDefault>false</activeByDefault>
            </activation>            
			<properties>
				<web_xml>src/main/resources/web.https.xml</web_xml>
				    <aa.opensso>http://opensso.in-silico.ch/opensso/identity</aa.opensso>
        			<aa.policy>http://opensso.in-silico.ch/Pol/opensso-pol</aa.policy>
			</properties>			
	    </profile>
    <!--  release build, with AA -->
    <profile>
      <id>aa-enabled</id>

      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <toxbank.protected>true</toxbank.protected>
      </properties>
    </profile>
    
    
    <!--  release build, without AA -->
    <profile>
      <id>aa-disabled</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <toxbank.protected>false</toxbank.protected>
      </properties>
    </profile>    
	    
</profiles>
</project>